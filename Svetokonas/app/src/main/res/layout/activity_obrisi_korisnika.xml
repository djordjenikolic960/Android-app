<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zelena"
    android:orientation="vertical"
    tools:context=".obrisi_korisnika">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kliknite na adresu korisnika kojeg zelite da obrisete"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginBottom="20dp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:id="@+id/obrisi_korisnika_linear">
    </LinearLayout>
</ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dugme"
        android:text="nazad"
        android:layout_gravity="center"
        android:id="@+id/obrisikorisnika_nazad"/>
</LinearLayout>