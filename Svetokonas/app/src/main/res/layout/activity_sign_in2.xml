<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/priroda"
    tools:context=".SignIn2">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="200dp"
      android:id="@+id/profil_linear"
      android:visibility="invisible"
      android:layout_marginHorizontal="15dp"
      android:orientation="vertical">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Ime"
        android:textColorHint="#fff"
        android:layout_gravity="center"
        android:id="@+id/profil_ime"
        />
      <EditText
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:hint="Prezime"
          android:layout_gravity="center"
          android:textColorHint="#fff"
          android:id="@+id/profil_prezime"
          />
       <EditText
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:hint="Razred"
           android:inputType="number"
           android:layout_gravity="center"
           android:textColorHint="#fff"
           android:id="@+id/profil_razred"
           />
       <Button
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:textColor="#fff"
           android:text="sacuvaj"
           android:layout_gravity="center"
           android:id="@+id/profil_dmg"
           android:background="@drawable/dugme"
           />
</LinearLayout>
</RelativeLayout>